<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default: disallow cleartext; trust only system CAs -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- AppLovin needs HTTP fallback on some endpoints; scope cleartext narrowly -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">applovin.com</domain>
        <domain includeSubdomains="true">applvn.com</domain>
    </domain-config>
</network-security-config>
